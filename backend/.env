# Navigate to backend folder
mkdir backend
cd backend

# Create .env file with LOCAL values
cat > .env << 'EOF'
# ==========================================
# LOCAL DEVELOPMENT CONFIGURATION
# ==========================================

# Database (Docker MongoDB)
MONGODB_URI=mongodb://admin:admin123@localhost:27017/acms?authSource=admin
MONGODB_DB_NAME=acms

# Redis (Docker Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Secrets (Generate new ones for production)
JWT_SECRET=dev_jwt_secret_change_in_production_12345
JWT_EXPIRE=15m
REFRESH_TOKEN_SECRET=dev_refresh_secret_change_in_production_67890
REFRESH_TOKEN_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Service (Gmail - setup later)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# External APIs (Mock URLs for now - replace when available)
SIS_API_BASE_URL=http://mock-sis-api.com/api
SIS_API_KEY=mock_api_key_replace_later
LMS_API_BASE_URL=http://mock-lms-api.com/api
LMS_API_KEY=mock_api_key_replace_later

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload (Local storage for now)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# AWS S3 (Leave empty for local development)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1
EOF
