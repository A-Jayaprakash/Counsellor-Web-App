# ==========================================
# BACKEND ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your values
# ==========================================

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/acms?authSource=admin
MONGODB_DB_NAME=acms

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_KEY
JWT_EXPIRE=15m
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_KEY
REFRESH_TOKEN_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Service
# For Gmail: Enable 2FA and create App Password at https://myaccount.google.com/apppasswords
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# External APIs (Replace with actual endpoints)
SIS_API_BASE_URL=https://your-sis-system.edu/api
SIS_API_KEY=your_sis_api_key
LMS_API_BASE_URL=https://your-lms-system.edu/api
LMS_API_KEY=your_lms_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# AWS S3 Configuration (Optional - for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# SETUP INSTRUCTIONS:
# ==========================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values
# 3. Never commit .env to git!
# 4. For production, generate strong random secrets
